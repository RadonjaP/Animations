import java.awt.Dimension;
import java.awt.Point;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.geom.Point2D;
import java.util.Random;
import java.util.Vector;

import javax.swing.JFrame;
import javax.swing.Timer;


public class MainFrame extends JFrame {

	private static final long serialVersionUID = 1L;
	
	public static final int PANEL_WIDTH = 400;
	public static final int PANEL_HEIGHT = 300;
	public static final int FRAME_WIDTH = PANEL_WIDTH + 50;
	public static final int FRAME_HEIGHT = PANEL_HEIGHT + 50;
	
	public static final int TIMER_DELAY = 10;
	
	public static final int RANDOM_NUM_RANGE_X = 1;
	public static final int RANDOM_NUM_RANGE_Y = 1;
	
	
	private Timer timer;
	private ActionListener moveAction;
	private AnimationContainer container;
	private Random r;
	
	public MainFrame() {
		this.setSize(MainFrame.PANEL_WIDTH, MainFrame.PANEL_HEIGHT);
		
		this.moveAction = new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				Point nextPos = getNextPosition();
				container.moveObject(nextPos.x, nextPos.y);
				repaint();
			}
		};
		
		this.timer = new Timer(MainFrame.TIMER_DELAY, moveAction);
		this.timer.start();
	}
	
	public Point getNextPosition() {	
		int x = r.nextInt();
		int y = r.nextInt();
		
		return new Point(x, y);
	}
	
	public static void main(String[] args) {

		
		
	}
	
}
