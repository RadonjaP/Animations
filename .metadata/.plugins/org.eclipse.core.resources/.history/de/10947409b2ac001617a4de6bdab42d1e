
public class TestNormalizationEngine {

	public static void main(String[] args) {
		
		Double posX = 2.0;
		Double posY = 1.0;
		
		Double goalX = 4.0;
		Double goalY = 5.0;
		
		Double x = goalX - posX;
		Double y = goalY - posY;
		
		Double normalizedX;
		Double normalizedY;
		
		Double magnitude;
		
		// Count magnitude
		magnitude = Math.sqrt(x * x + y * y);
		
		System.out.println("Vector magnitude: " + magnitude);
		
		while (posX <= goalX && posY <= goalY) {
			
			normalizedX = (double) Math.round(x / magnitude) / 10;
			normalizedY = (double) Math.round(y / magnitude) / 10;
			
			System.out.println("NORMALIZED X: " + normalizedX);
			
			posX += normalizedX;
			posY += normalizedY;
			
			System.out.printf("(%f , %f) \n", posX, posY);
			
		}
		
		
	}

}
